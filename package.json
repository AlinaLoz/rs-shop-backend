{
  "name": "rs-shop-back-lozita",
  "version": "0.0.1",
  "author": "alina.lozyuk.1999@gmail.com",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build:products": "nest build products",
    "build:imports": "nest build imports",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:sls:imports": "sls offline start --config apps/imports/serverless.yml",
    "start:sls:products": "sls offline start --config apps/products/serverless.yml",
    "start:products:dev": "nest start products --watch",
    "start:products:debug": "nest start products --debug --watch",
    "start:imports:dev": "nest start imports --watch",
    "start:imports:debug": "nest start imports --debug --watch",
    "deploy:products": "yarn build:products & sls deploy --config apps/products/serverless.yml",
    "deploy:imports": "yarn build:imports & sls deploy --config apps/imports/serverless.yml",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate:run": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run",
    "migrate:create": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:create -n",
    "migrate:revert": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.0.9",
    "@nestjs/typeorm": "^8.0.2",
    "@types/aws-lambda": "^8.10.82",
    "@types/aws-sdk": "^2.7.0",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.991.0",
    "aws-serverless-express": "^3.4.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^10.0.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "serverless-s3-local": "^0.6.20",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.37"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.9.3",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "serverless-offline": "^8.0.0",
    "serverless-plugin-optimize": "^4.2.1-rc.1",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
